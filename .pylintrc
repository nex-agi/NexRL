[MASTER]
# Ignore patterns for files or directories
ignore-patterns=^\.#
ignore-paths=^scripts/,
            ^nexrl/train_service_backend/

[MESSAGES CONTROL]
disable=
    # Import errors - pre-commit env != runtime env
    import-error,

    # Line length - handled by black formatter
    line-too-long,

    # Logging style - common pattern in codebase
    logging-fstring-interpolation,
    logging-not-lazy,

    # Code duplication - often noisy
    duplicate-code,

    # Exception handling - catching broad exceptions is sometimes necessary
    broad-exception-caught,

    # Subprocess - check parameter not always needed
    subprocess-run-check,

    # Style issues - not real bugs
    no-else-return,
    f-string-without-interpolation,

    # Naming conventions - sometimes need to match external APIs or env vars
    invalid-name,


    # Design rules - subjective, can be noisy
    too-many-arguments,
    too-many-positional-arguments,
    too-many-locals,
    too-many-statements,
    too-many-branches,
    too-many-instance-attributes,
    too-few-public-methods,
    too-many-return-statements,
    too-many-nested-blocks,
    too-many-lines,

    # Import location - sometimes needed for lazy loading or circular import avoidance
    import-outside-toplevel,

    # Documentation - can be enforced separately if needed
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,

    attribute-defined-outside-init

[FORMAT]
# Maximum number of characters on a single line (disabled, black handles this)
max-line-length=120

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,x,y,z,lr,rl,id,qa,qb,ip

[DESIGN]
# Maximum number of attributes for a class (default is 7)
max-attributes=15

# Maximum number of arguments for function / method (default is 5)
max-args=10

# Maximum number of locals for function / method body (default is 15)
max-locals=25

# Maximum number of return / yield for function / method body (default is 6)
max-returns=10

# Maximum number of branch for function / method body (default is 12)
max-branches=20

# Maximum number of statements in function / method body (default is 50)
max-statements=75
